    <script>
 function add()
 {
 var a=document.getElementById("num1").value;
 var b=document.getElementById("num2").value;
 var c=parseFloat(a)+parseFloat(b);
 document.getElementById("answer").value= c;
 }
 function sub()
 {
 var a=document.getElementById("num1").value;
 var b=document.getElementById("num2").value;
 var c=parseFloat(a)-parseFloat(b);
 document.getElementById("answer").value= c;
 }
 function mul()
 {
 var a=document.getElementById("num1").value;
 var b=document.getElementById("num2").value;
 var c=parseFloat(a)*parseFloat(b);
 document.getElementById("answer").value= c;
 }
 function div()
 {
 var a=document.getElementById("num1").value;
 var b=document.getElementById("num2").value;
 var c=parseFloat(a)/parseFloat(b);
 document.getElementById("answer").value= c;
 }
  function sqrt()
 {
 var a=document.getElementById("num1").value;
 var c=Math.sqrt(a);
 document.getElementById("answer").value= c;
 }
  function sin()
 {
 var a=document.getElementById("num1").value;
 var c=Math.sin(a);
 document.getElementById("answer").value= c;
 }
  function cos()
 {
 var a=document.getElementById("num1").value;
 var c=Math.cos(a);
 document.getElementById("answer").value= c;
 }
  function tan()
 {
 var a=document.getElementById("num1").value;
 var c=Math.tan(a);
 document.getElementById("answer").value= c;
 }
  function log()
 {
 var a=document.getElementById("num1").value;
 var c=Math.log(a);
 document.getElementById("answer").value= c;
 }
  function pow()
 {
 var a=document.getElementById("num1").value;
 var b=document.getElementById("num2").value;
 var c=Math.pow(a,b);
 document.getElementById("answer").value= c;
 }
  </script>
